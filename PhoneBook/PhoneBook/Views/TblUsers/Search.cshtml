@model IEnumerable<PhoneBook.Models.DomainModel.TblUser>

@{
    ViewBag.Title = "جست و جو";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int Counter = 1;
}

@{if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">
            <p>@ViewBag.Message</p>
        </div>
    }

}

<h2>جست و جو با کد ملی،نام خانوادگی ، موبایل</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h6>بعد از وارد کردن اطلاعات روی جست و جو کلیک کنید</h6>
    <div class="btn btn-outline-warning">
        @Html.ActionLink("بازگشت به لیست", "Index")
    </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("کد ملی ، نام خانوادگی یا تلفن همراه", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-10">
            @Html.Editor("NationalCode", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>


    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="جست و جو" class="btn btn-primary btnSearch" />
    </div>


</div>
}

<table class="table">
    <tr>
        <th>
            ردیف
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NationalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descriptions)
        </th>
        <th></th>
    </tr>
    @{ if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Counter
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Firstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NationalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descriptions)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("جزئیات", "Details", new { id = item.ID }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.ID })
                    </td>
                </tr>
                Counter++;
            }
        }
    }



</table>

